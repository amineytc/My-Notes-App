<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newmycolor">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editTitleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_txt_shape"
            android:hint="Title..."
            android:maxLines="1"
            android:padding="15dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/editSubtitleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_txt_shape"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:textColorHint="@color/black"
            android:hint="Subtitle..."/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dGreenImageId"
                android:layout_width="25dp"
                android:background="@drawable/green_dot"
                android:layout_height="25dp"/>
            <ImageView
                android:id="@+id/dYellowImageId"
                android:layout_width="25dp"
                android:background="@drawable/yellow_dot"
                android:layout_marginStart="20dp"
                android:layout_height="25dp"/>
            <ImageView
                android:id="@+id/dRedImageId"
                android:layout_width="25dp"
                android:background="@drawable/red_dot"
                android:layout_marginStart="20dp"
                android:layout_height="25dp"/>





        </LinearLayout>

        <EditText
            android:id="@+id/editNotesId"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_txt_shape"
            android:gravity="start"
            android:hint="Notes..."
            android:padding="15dp"
            android:textColorHint="@color/black" />


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEditNoteId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/mycolor"
        android:src="@drawable/doneicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="floating"/>


</androidx.constraintlayout.widget.ConstraintLayout>